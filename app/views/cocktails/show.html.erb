<div class="banner-show">
    <div class="container">
        <h1><%= @cocktail.name %> </h1>
        <div>
          <p><%= @cocktail.reviews.average(:rating) %></p>
        </div>
        <div>
        <%= link_to "Back to list ", cocktails_path, class: "btn-card" %>
        <%= link_to 'Leave a review', new_cocktail_review_path(@cocktail), class: "btn-card" %>
        </div>
  </div>
<div class="container">
  <div class="show_cocktail_card_info">
  <table class="table">
    <thead>
      <th>Ingredients</th>
    </thead>
    <tbody>
    <% @cocktail.doses.each do |dose| %>
      <td><%= dose.description %></td>
      <td><%= dose.ingredient %></td>
    </tbody>
  </table>
  <table class="table">
    <thead>
      <th>Steps</th>
    </thead>
    <tbody>
    <td><%= dose.process %></td>
    <% end %>
  </tbody>
  </table>
  </div>

  <div>
  <%= link_to "edit name",
  edit_cocktail_path(@cocktail), class: "btn-card" %>
  <%= link_to "edit Recipe",
  new_cocktail_dose_path(@cocktail), class: "btn-card" %>
  <%= link_to "delete",
  cocktail_path(@cocktail),
  method: :delete, class: "btn-card" %>
</div>

<table class="table">
    <thead>
      <th>Reviews</th>
    </thead>
    <tbody>
    <% @cocktail.reviews.each do |review| %>
      <td><%= review.content %></td>
      <td><%= review.rating %>/5</td>
      <td><%= link_to "delete",
      review_path(review),
      method: :delete,
      data: { confirm: "are you sure?"} %></td>
    </tbody>
    <% end %>
</table>
</div>
</div>
