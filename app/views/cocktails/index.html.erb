 <div class="background">
  <div class="banner">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Your Cocktails</h1>
      <%= link_to "Add a new Cocktail", new_cocktail_path, class: "btn btn-link" %>
      <%= link_to "Best Cocktails", top_reviews_path, class: "btn btn-link"  %>
      </div>
    </div>
  </div>
<div class="container_cards">
<div class="cards">
    <% @cocktails.each do |cocktail| %>
        <div class="card_cocktail">
          <img src='https://source.unsplash.com/collection/2469482/600x600/?sig="<%= rand(2...100) %>"' style="width: 100%; height: 60%;">
          <div class="card_cocktail_info">
            <div class="title">
              <h2> <%= cocktail.name %> </h2>
              <% cock = cocktail.reviews.average(:rating) %>
              <%= cock.to_i%> <i class="fas fa-star"></i>
            </div>
            <div>
        <h3 class="card_options"> <%= link_to "See more", cocktail_path(cocktail), class: "btn btn-link" %></h3>
        <h3 class="card_options"> <%= link_to "delete",
        cocktail_path(cocktail),
        method: :delete,
        class: "btn btn-link" %></h3>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
</div>
