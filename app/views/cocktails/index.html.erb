 <div class="background">
  <div class="banner">
    <div class="container">
        <h1>All Cocktails</h1>
      <%= link_to "Add a new Cocktail", new_cocktail_path, class: "btn btn-success" %>
      <%= link_to "Best Cocktails", top_reviews_path, class: "btn btn-success"  %>
    </div>
  </div>
<div class="container cards justify-content-between">
    <% @cocktails.each do |cocktail| %>
        <div class="card_cocktail">
          <img src='https://source.unsplash.com/collection/2469482/600x600/?sig="<%= rand(2...100) %>"' style="width: 100%; height: 60%;">
          <div class="card_cocktail_info">
            <div>
              <h2> <%= cocktail.name %> </h2>
              <p> <%= cocktail.reviews.average(:rating) %>/5</p>
            </div>
            <div>
        <h3 class="card_options"> <%= link_to "See more", cocktail_path(cocktail), class: "btn btn-primary" %></h3>
        <h3 class="card_options"> <%= link_to "delete",
        cocktail_path(cocktail),
        method: :delete,
        class: "btn btn-success" %></h3>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
